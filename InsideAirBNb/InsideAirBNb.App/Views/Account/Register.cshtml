@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="main-content">
    <h1 class="text-airbnb">Register</h1>
    <hr />
    <div class="row">
        <div class="col-sm-12 col-md-5">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h3>Create a new account.</h3>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-grp">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="form-obj">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-input" />
                    </div>
                    <hr />
                </div>
                <div class="form-grp">
                    <br />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="form-obj">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-input" />
                    </div>
                    <hr />
                </div>
                <div class="form-grp">
                    <br />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <div class="form-obj">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-input" />
                    </div>
                    <hr />
                </div>
                <button type="submit" class="btn btn-primary" style="float: right;">Register</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
